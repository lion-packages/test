{
    "name": "lion/test",
    "description": "Library to implement testing with helpers that allow easy testing with PHPUnit",
    "type": "library",
    "license": "MIT",
    "homepage": "https://dev.lion-packages.com",
    "keywords": [
        "lion",
        "test",
        "lion-test"
    ],
    "support": {
        "issues": "https://github.com/lion-packages/test/issues",
        "source": "https://github.com/lion-packages/test"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Test\\": "src/LionTest/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11 || ^4.0",
        "lion/exceptions": "^2.0",
        "phpunit/phpunit": "^12.0",
        "overtrue/phplint": "^9.5",
        "infection/infection": "^0.29.14 || ^0.31.0"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
